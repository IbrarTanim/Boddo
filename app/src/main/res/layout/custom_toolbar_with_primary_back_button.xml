<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_toolbar_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/seventy">


    <View
        android:id="@+id/blankView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/forty"
        app:layout_constraintBottom_toTopOf="@+id/rlMain" />

    <LinearLayout
        android:id="@+id/rlMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/twenty"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/blankView">


        <ImageView
            android:id="@+id/custom_back_button"
            android:layout_width="@dimen/fifty"
            android:layout_height="@dimen/fifty"
            android:background="@color/transparent"
            android:scaleType="fitStart"
            android:padding="@dimen/fifteen"
            android:src="@drawable/back_icon_20_26_12_2020" />

        <View
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="2" />


        <com.badoualy.stepperindicator.StepperIndicator
            android:id="@+id/stepper"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="Register"
            app:stpi_stepCount="6" />

        <View
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="0.5" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>