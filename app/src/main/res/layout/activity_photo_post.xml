<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color">

    <View
        android:id="@+id/blankView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/forty"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/rlMain" />

    <LinearLayout
        android:id="@+id/rlMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/thirty"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/blankView">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="1.5"
            android:background="@color/content_bg_color"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ibBackPhotoPost"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/ten"
                android:layout_weight="2"
                android:drawableLeft="@drawable/back_icon_20_26_12_2020"
                android:drawablePadding="@dimen/ten"
                android:gravity="left|center"
                android:textSize="@dimen/twenty"
                android:text="Share picture"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/tvPost"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="POST"
                android:textColor="@color/gray_light"
                android:textSize="@dimen/twenty"
                android:textStyle="bold" />

        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="30dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="16"
            android:background="@color/content_bg_color"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_marginTop="@dimen/ten"
                android:layout_weight="1"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civProfilePhotoPost"
                    android:layout_width="72dp"
                    android:layout_height="match_parent"
                    android:padding="@dimen/three"
                    android:src="@drawable/demo" />

                <TextView
                    android:id="@+id/tvUpDown"
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:drawableRight="@drawable/privacy_arrow_icon_11_04_2021"
                    android:gravity="center"
                    android:text="Public"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="5.5" />


            </LinearLayout>


            <EditText
                android:id="@+id/edtPhotoPost"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:hint="Write about this picture"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray" />

            <ImageView
                android:id="@+id/ivUploadedPhoto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="8"
                android:background="@color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/rokan" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="2" />


        </LinearLayout>

        <!--<View
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="2" />-->

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>