<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/privateChat"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="false"
    android:gravity="center"
    tools:context="net.boddo.btm.Activity.PrivateChatActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:elevation="@dimen/elevation_5dp">
        <include
            android:id="@+id/custom_toolbar_chatroom"
            layout="@layout/custom_toolbar_sender_receiver_photo" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/custom_toolbar_chatroom" />

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/other_profile_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:src="@drawable/default_img"
            app:civ_border_color="@color/green_500"
            android:visibility="gone"
            app:civ_border_width="3dp" />

        <TextView
            android:id="@+id/messageTV1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/chat_mess1"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:visibility="gone"
            android:layout_below="@id/other_profile_image"
            />
        <TextView
            android:id="@+id/messageTV2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start chatting now and write something nice"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:visibility="gone"
            android:layout_below="@id/other_profile_image"
            />
        <TextView
            android:id="@+id/messageTV3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You liked each other"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="30dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:visibility="gone"
            android:textSize="24dp"
            android:layout_above="@id/other_profile_image" />

    </RelativeLayout>
    <TextView
        android:id="@+id/text_view_typing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/typing"
        android:textAppearance="?android:textAppearanceSmall"
        android:padding="@dimen/paddin_4dp"
        android:textColor="@color/colorPrimary"
        android:layout_margin="@dimen/margin_5_dp"
        android:visibility="gone"
        />
    <RelativeLayout
        android:id="@+id/layout_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_5_dp">

        <LinearLayout
            android:id="@+id/message_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/emoji_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:padding="4dp"
                android:src="@drawable/smile" />

            <ImageView
                android:id="@+id/more_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:padding="4dp"
                android:src="@drawable/ic_caret_arrow_up" />
            <hani.momanii.supernova_emoji_library.Helper.EmojiconEditText
                android:id="@+id/emojicon_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/messagebox_shape"
                android:imeOptions="actionSend"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:minLines="1"
                android:hint="Write something..."
                android:maxLines="3"
                emojicon:emojiconSize="28sp" />
            <ImageView
                android:id="@+id/submit_btn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:src="@drawable/ic_send"
                android:tint="@color/colorAccent"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>