<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color">

    <View
        android:id="@+id/blankView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/forty"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/storyRlMain" />

    <LinearLayout
        android:id="@+id/storyRlMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/twenty"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/blankView">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="1.5"
            android:background="@color/content_bg_color"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="0.2" />

            <TextView
                android:id="@+id/tvBackCredits"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:drawableLeft="@drawable/back_icon_20_26_12_2020"
                android:drawablePadding="@dimen/fifteen"
                android:gravity="left|center"
                android:text="Buy credits"
                android:textColor="@color/black"
                android:textSize="@dimen/twenty" />

            <View
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="2" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="16"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="35dp" />

            <LinearLayout
                android:id="@+id/llBuyCredit_1000"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginRight="@dimen/twenty"
                android:layout_weight="1"
                android:background="@drawable/buy_credits_button_white_radious_bg"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/ten"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="at only $8"
                    android:textSize="@dimen/fifteen" />


                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/ten"
                    android:layout_weight="2"
                    android:gravity="center|left"
                    android:text="1,000 credits"
                    android:textSize="@dimen/twenty" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifteen" />

            <LinearLayout
                android:id="@+id/llBuyCredit_2000"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginRight="@dimen/twenty"
                android:layout_weight="1"
                android:background="@drawable/buy_credits_button_white_radious_bg"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/ten"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="at only $13"
                    android:textSize="@dimen/fifteen" />


                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/ten"
                    android:layout_weight="2"
                    android:gravity="center|left"
                    android:text="2,000 credits"
                    android:textSize="@dimen/twenty" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifteen" />

            <LinearLayout
                android:id="@+id/llBuyCredit_5000"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginRight="@dimen/twenty"
                android:layout_weight="1"
                android:background="@drawable/buy_credits_button_white_radious_bg"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/ten"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="at only $30"
                    android:textSize="@dimen/fifteen" />


                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/ten"
                    android:layout_weight="2"
                    android:gravity="center|left"
                    android:text="5,000 credits"
                    android:textSize="@dimen/twenty" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifteen" />

            <LinearLayout
                android:id="@+id/llBuyCredit_10000"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginRight="@dimen/twenty"
                android:layout_weight="1"
                android:background="@drawable/buy_credits_button_white_radious_bg"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/ten"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="at only $40"
                    android:textSize="@dimen/fifteen" />


                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/ten"
                    android:layout_weight="2"
                    android:gravity="center|left"
                    android:text="10,000 credits"
                    android:textSize="@dimen/twenty" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/thirty" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_marginLeft="@dimen/forty"
                android:layout_marginRight="@dimen/forty"
                android:layout_weight="0.5"
                android:gravity="top|left"
                android:text="Through Boddo credits. you can joint hotlist, access global chat rooms, unlock likes, unlock favorite, unlock visitors and many more."
                android:textSize="@dimen/twelve" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="0.25" />

            <TextView
                android:id="@+id/tvContinue"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:layout_marginLeft="@dimen/forty"
                android:layout_marginRight="@dimen/forty"
                android:layout_marginBottom="@dimen/twenty"
                android:background="@drawable/sign_in_button"
                android:gravity="center"
                android:text="Continue"
                android:textColor="@color/white"
                android:textSize="@dimen/twenty" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="0.25" />


            <View
                android:layout_width="match_parent"
                android:layout_height="30dp" />


        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>