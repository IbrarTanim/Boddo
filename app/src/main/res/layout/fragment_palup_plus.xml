<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color">

    <View
        android:id="@+id/blankView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/forty"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/storyRlMain" />

    <LinearLayout
        android:id="@+id/storyRlMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/twenty"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/blankView">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="1.5"
            android:background="@color/content_bg_color"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="0.1" />

            <TextView
                android:id="@+id/tvBackMembership"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:drawableLeft="@drawable/back_icon_20_26_12_2020"
                android:drawablePadding="@dimen/ten"
                android:gravity="left|center"
                android:text="Boddo plus"
                android:textColor="@color/black"
                android:textSize="@dimen/twenty" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="16"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="35dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/five"
                android:layout_weight="15"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_weight="4.5"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/imageSlider"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/zero"
                        android:layout_weight="9" />

                    <com.rd.PageIndicatorView
                        android:id="@+id/image_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/zero"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/ten"
                        android:layout_weight="1"
                        app:piv_animationType="swap"
                        app:piv_dynamicCount="true"
                        app:piv_interactiveAnimation="true"
                        app:piv_selectedColor="@color/colorAccent"
                        app:piv_unselectedColor="@color/gray_light_light"
                        app:piv_viewPager="@id/imageSlider" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_weight=".5" />

                <TextView
                    android:id="@+id/subscription_dialog_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/paddin_16dp"
                    android:textColor="@color/amber_100"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/subscription_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_weight="5">

                    <RadioGroup
                        android:id="@+id/subscribe_RbGroup"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/six_month_subscription"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/rb_pas"
                            android:button="@color/transparent"
                            android:elevation="8dp"
                            android:gravity="center" />

                        <RadioButton
                            android:id="@+id/three_month_subscription"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/rb_pas"
                            android:button="@color/transparent"
                            android:elevation="8dp"
                            android:textColor="@color/gray" />

                        <RadioButton
                            android:id="@+id/one_month_subscription"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/rb_pas"
                            android:button="@color/transparent"
                            android:elevation="8dp" />


                    </RadioGroup>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:id="@+id/firstClassPalupPlusFragment"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"

                            android:orientation="vertical">

                           <!-- -->

                            <TextView
                                android:id="@+id/month6_title"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/zero"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:text="1ST CLASS"
                                android:layout_marginRight="4dp"
                                android:layout_marginLeft="@dimen/two"
                                android:background="@drawable/post_select_button"
                                android:textColor="@color/white"
                                android:textSize="@dimen/eighteen"
                                android:textStyle="normal" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/zero"
                                android:layout_weight="2" />

                            <TextView
                                android:id="@+id/month_textView"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/zero"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Including"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/fifteen"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/medal_textView"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/zero"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="5,000 Credits"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/ten"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/zero"
                                android:layout_weight="1" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/zero"
                                android:layout_weight="1"
                                android:gravity="center|bottom"
                                android:text="10,000 BDT"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/fifteen"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/money_textView"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/zero"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="6 months"
                                android:textColor="@color/gray"
                                android:textSize="10sp"
                                android:textStyle="bold" />


                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <LinearLayout
                                android:id="@+id/premiumClassPalupPlusFragment"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="23dp"
                                    android:layout_weight="1"
                                    android:background="#aaa494"
                                    android:gravity="center"
                                    android:layout_marginLeft="@dimen/three"
                                    android:layout_marginRight="@dimen/three"
                                    android:textColor="@color/white">

                                    <TextView
                                        android:id="@+id/month2_title"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:text="PREMIUM"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/eighteen"
                                        android:textStyle="normal" />


                                </RelativeLayout>



                                <View
                                    android:id="@+id/view"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/zero"
                                    android:layout_weight="2" />

                                <TextView
                                    android:id="@+id/month2_textView"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/zero"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Including"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/fifteen"
                                    android:textStyle="normal" />

                                <TextView
                                    android:id="@+id/medal2_textView"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/zero"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="2,500 Credits"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/ten"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/zero"
                                    android:layout_weight="1" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/zero"
                                    android:layout_weight="1"
                                    android:gravity="center|bottom"
                                    android:text="5,000 BDT"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/fifteen"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/money2_textView"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/zero"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="3 months"
                                    android:textColor="@color/gray"
                                    android:textSize="10sp"
                                    android:textStyle="bold" />

                            </LinearLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:background="@drawable/priemium_select_button"
                                android:layout_alignParentTop="true"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="35dp"
                                android:padding="@dimen/five"
                                android:text="BEST VALUE"
                                android:textSize="12sp"
                                android:textColor="@color/white" />

                        </RelativeLayout>



                        <LinearLayout
                            android:id="@+id/plusPalupPlusFragment"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"

                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/month3_title"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/zero"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:text="PLUS"
                                android:layout_marginRight="@dimen/two"
                                android:layout_marginLeft="4dp"
                                android:background="#aaa494"
                                android:textColor="@color/white"
                                android:textSize="@dimen/eighteen"
                                android:textStyle="normal" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/zero"
                                android:layout_weight="2" />

                            <TextView
                                android:id="@+id/month3_textView"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/zero"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Including"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/fifteen"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/medal3_textView"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/zero"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="1,000 Credits"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/ten"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/zero"
                                android:layout_weight="1" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/zero"
                                android:layout_weight="1"
                                android:gravity="center|bottom"
                                android:text="2,000 BDT"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/fifteen"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/money3_textView"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/zero"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="1 months"
                                android:textColor="@color/gray"
                                android:textSize="10sp"
                                android:textStyle="bold" />


                        </LinearLayout>


                    </LinearLayout>


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_weight="0.3" />

                <TextView
                    android:id="@+id/continue_button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/fifty"
                    android:layout_marginRight="@dimen/fifty"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg_green"
                    android:gravity="center"
                    android:text="Next"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/twenty"
                    app:fontFamily="sans-serif-medium" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_weight="0.5" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/thirty"
                    android:layout_marginRight="@dimen/thirty"
                    android:layout_weight="0.5"
                    android:gravity="left|bottom"
                    android:text="Recurring billing. Cancel anytime"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/twelve"
                    android:textStyle="bold"
                    app:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tvLongText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_marginLeft="@dimen/thirty"
                    android:layout_marginRight="@dimen/thirty"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:text="@string/by_tapping_continue"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/twelve"
                    app:fontFamily="sans-serif-medium" />




                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_weight="0.5" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>