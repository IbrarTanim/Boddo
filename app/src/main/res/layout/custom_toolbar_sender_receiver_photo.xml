<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/seventy"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/seven"
            android:scaleType="fitCenter"
            android:src="@drawable/back_chat_11_11_2021" />

        <View
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="8"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/llOthersUserChat"
                android:layout_width="@dimen/hundred_fifty"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvOtherUserChat"
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="Other User"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fifteen" />


                <RelativeLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:src="@drawable/ic_default_message_screen_profile_picture_04_11_2021"
                        app:civ_border_color="@color/transparent"
                        app:civ_border_width="3dp" />

                    <TextView
                        android:layout_width="@dimen/thirty"
                        android:layout_height="@dimen/thirty"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/ic_message_count_icon_left_11_11_2021"
                        android:gravity="center"
                        android:text="32"
                        android:textColor="@color/white"
                        android:textSize="@dimen/ten" />


                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/hundred_fifty"
                android:layout_height="match_parent"
                android:layout_marginLeft="-20dp"
                android:layout_toEndOf="@+id/llOthersUserChat"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:src="@drawable/ic_default_message_screen_profile_picture_04_11_2021"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="3dp" />

                    <TextView
                        android:layout_width="@dimen/thirty"
                        android:layout_height="@dimen/thirty"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/ic_message_count_icon_right_11_11_2021"
                        android:gravity="center"
                        android:text="32"
                        android:textColor="@color/white"
                        android:textSize="@dimen/ten" />


                </RelativeLayout>

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="Self User"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fifteen" />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/seven"
            android:scaleType="fitCenter"
            android:src="@drawable/dot_chat_11_11" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>