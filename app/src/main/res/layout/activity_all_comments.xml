<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color">

    <View
        android:id="@+id/blankView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/forty"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/storyRlMain" />

    <LinearLayout
        android:id="@+id/storyRlMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/twenty"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/blankView">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="1.5"
            android:background="@color/content_bg_color"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="0.2" />

            <TextView
                android:id="@+id/comment_title"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:drawableLeft="@drawable/back_icon_20_26_12_2020"
                android:drawablePadding="@dimen/ten"
                android:gravity="left|center"
                android:textColor="@color/black" />


        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="16">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_comment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/content_bg_color" />

                <View
                    android:id="@+id/viewWhiteBlank"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:background="@color/white"
                    android:visibility="gone" />


            </LinearLayout>


        </androidx.core.widget.NestedScrollView>


        <LinearLayout
            android:id="@+id/message_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="horizontal">

            <!-- <ImageView
                 android:id="@+id/emoji_btn"
                 android:layout_width="20dp"
                 android:layout_height="40dp"
                 android:layout_gravity="center_vertical"
                 android:padding="4dp"
                 android:background="@drawable/messagebox_shape"
                 android:src="@drawable/smile"
                 android:visibility="invisible" />-->

            <hani.momanii.supernova_emoji_library.Helper.EmojiconEditText
                android:id="@+id/emojicon_edit_text"
                android:layout_width="367dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/ten"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center|left"
                android:hint="Type a comment"
                android:imeOptions="actionSend"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp">


                <ImageView
                    android:id="@+id/submit_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/five"
                    android:src="@drawable/send_icon_20_03_01_2021_touch"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/submitButtonTouch"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/five"
                    android:src="@drawable/send_icon_20_03_01_2021_normal" />


            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>